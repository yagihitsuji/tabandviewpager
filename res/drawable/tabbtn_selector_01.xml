<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient
		       android:startColor="#8888ff"
		       android:endColor="#8888aa"
		       android:angle="90"
		    />
		    <stroke
		        android:width="1dp"
		        android:color="@color/gray"
		    />
		    <corners
		        android:radius="15dp"
		    />
		    <padding
		        android:left="4dp"
		        android:top="4dp"
		        android:right="4dp"
		        android:bottom="4dp"
		    />
		    <size
		        android:height="50dp"
		        android:width="150dp"
		    /> 
		</shape>
    </item> 
    <item android:state_selected="true">
        <shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient
		       android:startColor="#88ff88"
		       android:endColor="#88aa88"
		       android:angle="90"
		    />
		    <stroke
		        android:width="1dp"
		        android:color="@color/gray"
		    />
		    <corners
		        android:radius="15dp"
		    />
		    <padding
		        android:left="4dp"
		        android:top="4dp"
		        android:right="4dp"
		        android:bottom="4dp"
		    />
		    <size
		        android:height="50dp"
		        android:width="150dp"
		    /> 
		</shape>
    </item>
</selector>